{
  "name": "agora-electron-sdk",
  "version": "4.1.0",
  "description": "agora-electron-sdk",
  "main": "lib/commonjs/AgoraSdk.js",
  "types": "lib/typescript/AgoraSdk.d.ts",
  "repository": "https://github.com/AgoraIO-Extensions/Electron-SDK",
  "author": "agora.io",
  "scripts": {
    "postinstall": "patch-package",
    "prepublishOnly": "yarn typescript",
    "test": "prebuild-ci",
    "typescript": "ts-interface-builder ts/Private/*.ts -o ts/Private/ti/ && tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "install": "prebuild-install -r napi --verbose || prebuild",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install && yarn link && yarn example link agora-electron-sdk"
  },
  "binary": {
    "napi_versions": [
      3
    ]
  },
  "agora-electron-sdk": {
    "iris_sdk_win32": "https://download.agora.io/sdk/release/iris_4.1.0_DCG_Windows_Video_20221220_0216.zip",
    "iris_sdk_darwin": "https://download.agora.io/sdk/release/iris_4.1.0_DCG_Mac_Video_20221220_0221.zip"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "buffer": "^6.0.3",
    "json-bigint": "^1.0.0",
    "lodash.isequal": "^4.5.0",
    "prebuild-install": "^7.1.1",
    "ts-interface-checker": "^1.0.2",
    "yuv-buffer": "1.0.0",
    "yuv-canvas": "1.2.6"
  },
  "files": [
    "lib",
    "ts",
    "scripts",
    "gulpfile.*",
    "source_code"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/config-conventional": "^17.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@typescript-eslint/parser": "^5.33.0",
    "cmake-js": "^6.3.2",
    "commitlint": "^17.0.2",
    "cz-conventional-changelog": "3.3.0",
    "download": "^8.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "4.2.5",
    "jsonfile": "^6.1.0",
    "patch-package": "^6.5.0",
    "postinstall-postinstall": "^2.1.0",
    "prebuild": "^11.0.4",
    "prebuild-ci": "^4.0.0",
    "prettier": "^2.0.5",
    "progress": "^2.0.3",
    "release-it": "^15.0.0",
    "ts-interface-builder": "^0.3.3",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "shared-node-browser": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    },
    "globals": {
      "define": "readonly",
      "obj_attrib": "readonly",
      "info": "readonly",
      "NodeJS": "readonly"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "build/",
    "dist/",
    "js/",
    "types/",
    "ts/Private/ti/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
