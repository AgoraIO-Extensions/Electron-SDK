{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "lib/typescript",
    "outDir": "lib/commonjs",
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./ts/**/*"
  ]
}
