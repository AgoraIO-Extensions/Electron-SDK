{
  "name": "Agora-Electron-API-Example",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "compile": "electron-webpack",
    "dev": "electron-webpack dev",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:mac": "yarn dist --mac",
    "dist:win32": "yarn dist --win --ia32",
    "dist:win64": "yarn dist --win --x64",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-webpack dev",
    "switchEnv:win32": "cd .. && @powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./ci/packager-win.ps1 1 switchEnv",
    "switchEnv:win64": "cd .. && @powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./ci/packager-win.ps1 2 switchEnv"
  },
  "build": {
    "productName": "Agora-Electron-API-Example",
    "appId": "agora.io.ElectronApiExample",
    "asar": false,
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      "./extraResources/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "AgoraIO-Extensions",
      "repo": "Electron-SDK"
    }
  },
  "dependencies": {
    "antd": "^4.20.3",
    "ffi-napi": "^4.0.3",
    "history": "^5.0.0",
    "react": "^18.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.1.0",
    "react-router-dom": "^5.2.0",
    "recharts": "^2.1.13",
    "ref-napi": "^3.0.3",
    "source-map-support": "^0.5.16"
  },
  "optionalDependencies": {
    "agora-electron-sdk": "latest"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@electron/rebuild": "^3.2.10",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.6",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^18.0.3",
    "@types/react-router-dom": "^5.1.6",
    "electron": "18.2.3",
    "electron-builder": "^23.1.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "react-refresh": "^0.13.0",
    "sass": "^1.56.2",
    "sass-loader": "~10.2.1",
    "style-loader": "^2.0.0",
    "typescript": "4.6.4",
    "webpack": "~4.42.1"
  }
}
